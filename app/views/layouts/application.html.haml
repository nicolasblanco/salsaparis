!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1")
    %meta(name="description" content="L'annuaire pratique de toutes les soirées salsa de Paris!")
    %meta(name="keywords" content="salsa, kizomba, paris, merengue, danse, dance, parties, courses")
    %title Salsaparis.fr
    %link(rel="stylesheet"  href="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.css")
    %script(type="text/javascript" src="http://code.jquery.com/jquery-1.5.min.js")
    %script(type="text/javascript" src="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.js")
    = javascript_include_tag "rails"
    
    = csrf_meta_tag

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-15322489-2']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    %div(data-role="page" data-theme="e" id="home")
      %div(data-role="header")
        %h1 Salsaparis.fr
        - if I18n.locale == :fr
          = link_to "English", "/en"
        - else
          = link_to "Français", "/"
        - unless content_for?(:header_content) || %w(/ /fr /en).include?(request.fullpath)
          = link_to "Home", I18n.locale == :en ? "/en" : "/", "data-icon" => "home", "data-iconpos" => "notext", "data-direction" => "reverse", "data-ajax" => false, :class => "ui-btn-right"
        
        = yield :header_content
      %div(data-role="content")
        = yield
      
      %div(data-role="footer" class="ui-bar")
        %h1 Salsaparis - A project by slainer68 - Love Live Dance!
    
    = yield :other_pages
    